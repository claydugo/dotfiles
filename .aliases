alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias ......='cd ../../../../../'
alias dl='cd ~/Downloads/'
alias dt="cd ~/Desktop"
alias doc="cd ~/Documents"
alias proj='cd ~/projects/'
alias ll='ls -lah'
alias cl='clear'
alias :q='exit'
alias p='python3'
alias path='echo -e ${PATH//:/\\n}'
alias vim='v'
alias vi='v'
alias t='tmux'
alias ta="tmux a"
alias td='cd $(mktemp -d /tmp/$1.XXXX)'
alias glb='git shortlog -nse'
alias nvimtime='nvim --startuptime /tmp/nvimstartup.log -c exit && tail -10 /tmp/nvimstartup.log'

# Think this is zsh default
alias ~='cd ~'

# Ramona Specific
if [ -f ~/dotfiles/ramona/.ramona ]; then
    source ~/dotfiles/ramona/.ramona
fi

if hash exa 2>/dev/null; then
    alias ls='exa'
    alias ll="exa -lah --git --icons"
    alias lll="exa -abghHliS@ --git --icons"
fi

alias la='cat ~/.aliases'

if hash bat 2>/dev/null; then
    alias la='bat ~/.aliases -l bash'
fi
