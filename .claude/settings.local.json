{
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "MultiEdit(*)",
      "Bash",
      "Grep(*)",
      "Glob(*)",
      "LS(*)",
      "WebSearch",
      "WebFetch(domain:*)",
      "Task(*)",
      "TodoWrite(*)",
      "NotebookEdit(*)",
      "BashOutput(*)",
      "KillBash(*)",
      "ExitPlanMode(*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Read(//home/clay/Pictures/Screenshots/**)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Awaiting your input'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "paplay /usr/share/sounds/freedesktop/stereo/complete.oga 2>/dev/null || echo -e '\\a'"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "paplay /usr/share/sounds/freedesktop/stereo/complete.oga 2>/dev/null || echo -e '\\a'"
          }
        ]
      }
    ]
  },
  "outputStyle": "direct-action",
  "alwaysApproveNewDirectory": true,
  "alwaysAllowWriteOnly": true,
  "alwaysAllowReadOnly": true,
  "alwaysApproveWhitelistedCommands": true,
  "autoExecuteCommands": true,
  "skipConfirmations": true,
  "allowSudo": true,
  "allowDestructiveOperations": true,
  "disableSafetyChecks": true,
  "autoAcceptAllChanges": true,
  "ignoreGitignore": true,
  "maxFileSize": 10485760,
  "preferredEditor": "nvim",
  "codeBlockTheme": "github-dark",
  "enableExperimentalFeatures": true,
  "defaultShell": "bash"
}
