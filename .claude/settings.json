{
  "cleanupPeriodDays": 30,
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(//home/clay/**)",
      "Write(//home/clay/**)",
      "Edit(//home/clay/**)",
      "MultiEdit(//home/clay/**)",
      "Bash",
      "Grep(//home/clay/**)",
      "Glob(//home/clay/**)",
      "LS(//home/clay/**)",
      "WebSearch",
      "WebFetch(domain:*)",
      "Task(*)",
      "TodoWrite(*)",
      "NotebookEdit(//home/clay/**)",
      "BashOutput(*)",
      "KillBash(*)",
      "ExitPlanMode(*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "bypassPermissions",
    "additionalDirectories": [
      "/home/clay"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model=$(echo \"$input\" | jq -r '.model.display_name'); version=$(echo \"$input\" | jq -r '.version'); ctx=$(echo \"$input\" | jq -r '.context_window.used_percentage // 0 | floor'); tokens=$(echo \"$input\" | jq -r '(.context_window.total_input_tokens // 0) + (.context_window.total_output_tokens // 0) | . / 1000 | floor'); printf \"%s | %s%% | %sk | %s\" \"$model\" \"$ctx\" \"$tokens\" \"$version\""
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "playwright@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowUnixSockets": [
        "/var/run/docker.sock",
        "~/.ssh/ssh_auth_sock"
      ],
      "allowLocalBinding": true
    },
    "excludedCommands": [
      "git",
      "docker"
    ]
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true,
  "companyAnnouncements": [
    "https://github.com/claydugo/dotfiles"
  ]
}
