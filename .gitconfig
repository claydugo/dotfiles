[user]
    email = claydugo@gmail.com
    name = Clay Dugo
    signingkey = /home/clay/.ssh/id_ed25519.pub

[core]
    editor = nvim
    excludesfile = /home/clay/.gitignore
    sshCommand = ssh -i ~/.ssh/id_ed25519

[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    sc = commit --template /home/clay/dotfiles/.gitlab_ci_skip

[pull]
    rebase = true

[rerere]
    enabled = true

[merge]
    tool = nvim

[mergetool]
    keepBackup = false

[init]
    defaultBranch = main

[diff]
    colorMoved = default

[push]
    autoSetupRemote = true
    followTags = true

[submodule]
    recurse = true

[column]
    ui = auto

[branch]
    sort = -committerdate

[gpg]
    format = ssh

[commit]
    gpgsign = true

[fetch]
    writeCommitGraph = true

[url "git@github.com:"]
    insteadOf = "https://github.com/"

[includeIf "gitdir:~/projects/ramona/"]
    path = ~/.gitrconfig
